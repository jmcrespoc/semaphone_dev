- name: Actualizar paquetes con apt-get
  hosts: servidor_pruebas
  become: yes  # Habilita sudo
  tasks:
    - name: APT_UPDATE
      apt:
        update_cache: yes
    - name: APT UPGRADE
      apt:
        upgrade: yes
    - name: AUTOREMOVE
      apt: 
        autoremove: yes
    - name: LIMPIAR ARCHIVOS TEMPORALES
      apt:
        autoclean: yes
